        <ul>
            <li class="brand"><a href="/">TS</a></li>
            <li class="logout"><a href="/logout">Logout</a></li>
        </ul>
    </nav> -->
    <% if(message.length > 0) { %>
    <div class="flash-message"><%=message%></div>
    <% } %>
    <main>
        <h1 class="heading">Welcome to the Task Scheduler</h1>
        <h3 class="heading-task">Tasks:</h3>
        <ol>
            <% tasks.forEach(function(task){ %>
            <li class="tasks">
                <h4 class="user-name">
                    <%=task.user.name%>
                </h4>
                <p>
                    <%=task.task%>
                </p>
                <form action="/tasks/<%= task._id%>?_method=DELETE" method="POST">
                    <button class="login-btn">DELETE</button>
                </form>
            </li>
            <%});%>
        </ol>
        <div class="add-task-head">Add Tasks:</div>
        <form action="/tasks" method="POST" class="add-task">
            <input type="text" name="task" placeholder="Task" required>
            <button class="login-btn">Submit</button>
        </form>
    </main>
    <footer class="footer">
        <ul>
            <li>About Project</li>
            <li>Contact Me</li>
        </ul>
    </footer>
    <script src="../theme.js"></script>
</body>

</html>